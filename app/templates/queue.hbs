<div class="main">
  <div class="header">
    Now Queueing
    {{#if session.isAuthenticated}}
      {{#change-queue type="subtract"}}-{{/change-queue}} {{#change-queue type="add"}}+{{/change-queue}}
    {{/if}}
  </div>
  {{#if model.queue.value.currentPosition}}
    <div class="counter">{{model.queue.value.currentPosition}}</div>
  {{else}}
    <div class="message">
      Starting Soon
    </div>
  {{/if}}
  {{full-screen}}
  <div class="login no-fullscreen">{{#link-to "login"}}log in/out{{/link-to}}</div>
</div>
